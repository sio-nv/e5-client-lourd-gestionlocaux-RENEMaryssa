<?xml version="1.0" encoding="UTF-8"?>
<!--SITUATION B : Mise en place l’onglet « Voir toutes les interventions ».-->
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass"
      xmlns:fx="http://javafx.com/fxml/1" spacing="30.0">
    <!-- Création de tout les champs-->
    <HBox alignment="CENTER_LEFT" spacing="75.0">
        <Label text="Salle:"/>
        <TextArea fx:id="salle" minHeight="16" maxHeight="30" minWidth="69" maxWidth="100" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="40.0">
        <Label text="Intervenant:"/>
        <TextArea fx:id="intervenant" minHeight="16" maxHeight="30" minWidth="69" maxWidth="100" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="57.0">
        <Label text="Contact:"/>
        <TextArea fx:id="contact" minHeight="16" maxHeight="30" minWidth="69" maxWidth="100" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="73.0">
        <Label text="Motif:"/>
        <TextArea fx:id="motif" minHeight="16" maxHeight="30" minWidth="69" maxWidth="100" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="75.0">
        <Label text="Date:"/>
        <TextArea fx:id="date" minHeight="16" maxHeight="30" minWidth="69" maxWidth="100" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="primaryButton" text="Valider et enregistrer" />
    </HBox>

<padding>
<Insets top="30" right="20" bottom="30" left="40"/>
</padding>

</VBox>
